{% extends 'base.html.twig' %}

{% block title %}View Item{% endblock %}

{% block body %}
<div style="
    position: relative;
    min-height: 100vh;
    background: url('{{ asset('images/hero/hero-bg.png') }}') no-repeat center center fixed;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
">
    <!-- Dark overlay -->
    <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: 0;
    "></div>

    <!-- Content -->
    <section class="features" style="position: relative; z-index: 1; color: white; text-align: center;">
        <h2 style="
            font-family: 'Montserrat', sans-serif;
            font-weight: 900;
            color: #ffffff;
            background: rgba(47, 82, 51, 0.8);
            display: inline-block;
            padding: 10px 25px;
            border-radius: 8px;
        ">
            View Item Details
        </h2>

        <div style="
            max-width: 600px;
            margin: 30px auto 0 auto;
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
            color: #1A1A1A;
            text-align: left;
        ">

            <p><strong>Item Name:</strong> {{ item.ItemName }}</p>
            <p><strong>Description:</strong> {{ item.Description }}</p>
            <p><strong>Quantity:</strong> {{ item.Quantity }}</p>
            <p><strong>Price:</strong> â‚±{{ item.Price }}</p>

            <div style="text-align:center; margin-top:20px;">
                <a href="{{ path('app_item_index') }}" class="cta-btn" style="background-color: #2F5233;">Back to List</a>
                <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="cta-btn" style="background-color: #E3572E; margin-left: 10px;">Edit</a>
                {{ include('item/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
</div>
{% endblock %}
