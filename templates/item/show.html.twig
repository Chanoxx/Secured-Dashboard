{# templates/item/show.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block admin_title %}Product Details - {{ item.itemName }}{% endblock %}

{% block admin_content %}
  <div class="dashboard-header">
    <h1>Product Details</h1>
    <p>Details for <strong>{{ item.itemName }}</strong></p>
  </div>

  <section class="product-section">
    <div class="shop-card" style="display:flex; flex-direction:row; gap:18px;">
      <div style="width:360px;">
        <div class="image-container" style="height:320px;">
          <img src="{{ item.image ? asset('uploads/products/' ~ item.image) : asset('images/default-product.png') }}" alt="{{ item.itemName }}">
        </div>
      </div>

      <div style="flex:1;">
        <h2 style="margin-top:0;">{{ item.itemName }}</h2>
        <p class="description">{{ item.description|default('No description provided.') }}</p>
        <p class="price" style="margin-top:12px; font-size:1.2rem;">â‚±{{ item.price|number_format(2, '.', ',') }}</p>
        <p class="stock">Stock: {{ item.quantity }}</p>

        <div style="margin-top:18px;">
          <a class="btn-edit" href="{{ path('admin_product_edit', {'id': item.id}) }}">Edit</a>
          <form action="{{ path('admin_product_delete', {'id': item.id}) }}" method="post" style="display:inline-block" onsubmit="return confirm('Delete this product?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
            <button class="btn-delete" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
