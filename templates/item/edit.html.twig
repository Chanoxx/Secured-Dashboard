{% extends 'admin/base_admin.html.twig' %}

{% block title %}Edit Item | Trailblaze Admin{% endblock %}

{% block admin_content %}
<div class="dashboard-header">
  <h1>Edit Product üõ†Ô∏è</h1>
  <p>Modify the details of your product below.</p>
</div>

<section class="add-product-form">
  <h2>Edit Item</h2>

  {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

  <div class="form-group">
    {{ form_label(form.itemName, 'Item Name') }}
    {{ form_widget(form.itemName) }}
  </div>

  <div class="form-group">
    {{ form_label(form.description, 'Description') }}
    {{ form_widget(form.description, {'attr': {'rows': 3}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.quantity, 'Quantity') }}
    {{ form_widget(form.quantity) }}
  </div>

  <div class="form-group">
    {{ form_label(form.price, 'Price') }}
    {{ form_widget(form.price) }}
  </div>

  {% if form.imageFile is defined %}
  <div class="form-group">
    {{ form_label(form.imageFile, 'Update Product Image') }}
    {{ form_widget(form.imageFile) }}
  </div>
  {% endif %}

  <div style="text-align:center; margin-top:20px;">
    <button type="submit" class="btn-edit">Update Item</button>
    <a href="{{ path('admin_products') }}" class="btn-delete">Cancel</a>
  </div>

  {{ form_end(form) }}
</section>
{% endblock %}
