{% extends 'base.html.twig' %}

{% block title %}Trailblaze Shop{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/shop.css') }}">
{% endblock %}

{% block body %}

<div class="shop-container">

    <div class="shop-header">
        <h1>Welcome to <span>Trailblaze</span> Gear Store</h1>
        <p>Hello, {{ app.user.email }} ðŸ‘‹</p>
    </div>

    <div class="product-grid">
        {% for product in products %}
            <div class="product-card">

                <a href="{{ path('product_show', {id: product.id}) }}" class="img-box">
                    <img src="{{ asset('uploads/products/' ~ product.image) }}">
                </a>

                <div class="product-info">
                    <h3>{{ product.itemName }}</h3>
                    <p class="desc">{{ product.description }}</p>

                    <div class="button-row">
                        <a href="{{ path('product_show', {id: product.id}) }}" class="btn-buy-now">
    Buy Now
</a>

                        <form action="{{ path('cart_add', {id: product.id}) }}" method="POST">
                            <input type="hidden" name="quantity" value="1">
                            <button class="btn-cart">Add to Cart</button>
                        </form>
                    </div>
                </div>

            </div>
        {% else %}
            <p class="no-products">No products available.</p>
        {% endfor %}
    </div>

</div>

{% endblock %}
