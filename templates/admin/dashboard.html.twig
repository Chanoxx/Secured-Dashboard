</div>


<section class="product-section">

    <div class="product-header">
        <h2>Live Store Preview</h2>
    </div>

    <div class="shop-preview-grid">
        {% for product in products %}
            <div class="shop-card">
                <div class="image-container">
                    <img 
                        src="{{ product.image 
                                ? asset('uploads/products/' ~ product.image) 
                                : asset('images/default-product.png') 
                        }}" 
                        alt="{{ product.itemName }}">
                </div>

                <h3 class="product-name">{{ product.itemName }}</h3>
                <p class="description">{{ product.description|default('No description') }}</p>

                <p class="price">â‚±{{ product.price|number_format(2, '.', ',') }}</p>
                <p class="stock">{{ product.quantity }} in stock</p>
            </div>
        {% else %}
            <p>No products available.</p>
        {% endfor %}
    </div>

</section>

{% endblock %}
