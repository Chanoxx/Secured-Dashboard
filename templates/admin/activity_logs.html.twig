{% extends 'admin/base_admin.html.twig' %}

{% block admin_title %}Activity Logs{% endblock %}

{% block admin_content %}

<div class="dashboard-header">
    <h1>Activity Logs</h1>
    <p>All system actions recorded in real-time.</p>
</div>

<div class="logs-box">

    {% if logs is empty %}
        <p>No logs yet.</p>
    {% else %}

        <table class="logs-table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>User</th>
                    <th>Role</th>
                    <th>Action</th>
                    <th>Details</th>
                </tr>
            </thead>

            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.createdAt|date('Y-m-d h:i A') }}</td>
                    <td>{{ log.username }}</td>
                    <td>{{ log.role }}</td>
                    <td>{{ log.action }}</td>
                    <td>{{ log.targetData }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}

</div>

{% endblock %}
